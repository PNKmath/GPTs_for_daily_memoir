
openapi: 3.1.0
info:
  title: Notion API - Add Entry to "Daily memoir" Database
  description: API for interacting with the "Daily memoir" Notion database, allowing creation of new entries.
  version: 1.0.0
servers:
  - url: https://api.notion.com/v1
    description: Notion API server
paths:
  /pages:
    post:
      operationId: addDatabaseEntry
      summary: Create a new page in the "Daily memoir" database
      description: Add a new page (row) to the specified Notion database.
      parameters:
        - name: Notion-Version
          in: header
          required: true
          description: The version of the Notion API to use.
          schema:
            type: string
            example: "2022-06-28"
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CreateDailyMemoirRequest'
      responses:
        '200':
          description: Successfully created a new page
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Page'
        '400':
          description: Bad request. The request is invalid or missing required parameters.
        '401':
          description: Unauthorized. The API token is invalid or not provided.
        '404':
          description: Not Found. The specified database ID does not exist.
        '500':
          description: Internal Server Error. Something went wrong on the Notion server.
      security:
        - bearerAuth: []
components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT

  schemas:
    CreateDailyMemoirRequest:
      type: object
      properties:
        parent:
          type: object
          description: Parent database information.
          properties:
            database_id:
              type: string
              description: The ID of the "Daily memoir" Notion database.
          required:
            - database_id
        properties:
          type: object
          description: Properties to set on the new "Daily memoir" page.
          properties:
            이름:
              type: object
              description: 제목(Title) 속성
              properties:
                title:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
                            description: 제목
            날짜:
              type: object
              description: 날짜(Date) 속성
              properties:
                date:
                  type: object
                  properties:
                    start:
                      type: string
                      format: date
                      description: 시작 날짜
            감정적_사건:
              type: object
              description: 감정적 사건(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            구체적_감정과_강도:
              type: object
              description: 구체적 감정과 강도(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            감정:
              type: object
              description: 감정(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            감정의_근원:
              type: object
              description: 감정의 근원(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            리프레이밍:
              type: object
              description: 리프레이밍(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            반응:
              type: object
              description: 반응(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            원하는_반응:
              type: object
              description: 원하는 반응(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            의도한_결과vs실제_일어난_일:
              type: object
              description: 의도한 결과 vs 실제 일어난 일(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            했던_일:
              type: object
              description: 했던 일(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            앞으로_할_일:
              type: object
              description: 앞으로 할 일(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            차이_분석_및_교훈:
              type: object
              description: 차이 분석 및 교훈(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
            지속_개선_포기할_것:
              type: object
              description: 지속 개선/포기할 것(Rich text)
              properties:
                rich_text:
                  type: array
                  items:
                    type: object
                    properties:
                      text:
                        type: object
                        properties:
                          content:
                            type: string
          required:
            - 이름
            - 날짜
            - 감정적_사건
            - 구체적_감정과_강도
            - 감정
            - 감정의_근원
            - 리프레이밍
            - 반응
            - 원하는_반응
            - 의도한_결과vs실제_일어난_일
            - 했던_일
            - 앞으로_할_일
            - 차이_분석_및_교훈
            - 지속_개선_포기할_것
      required:
        - parent
        - properties
      example:
        parent:
          database_id: "125fa0f1-5444-80d8-9850-d8d1c9b6246e"
        properties:
          이름:
            title:
              - text:
                  content: "오늘의 회고"
          날짜:
            date:
              start: "2024-12-28"
          감정적_사건:
            rich_text:
              - text:
                  content: "친구와 갈등"
          구체적_감정과_강도:
            rich_text:
              - text:
                  content: "분노 7/10, 실망 5/10"
          감정:
            rich_text:
              - text:
                  content: "복잡하고 억울한 마음"
          감정의_근원:
            rich_text:
              - text:
                  content: "오래된 신뢰 문제"
          리프레이밍:
            rich_text:
              - text:
                  content: "다른 관점에서 이해하려 시도"
          반응:
            rich_text:
              - text:
                  content: "즉각적으로 따짐"
          원하는_반응:
            rich_text:
              - text:
                  content: "보다 차분하게 대화"
          의도한_결과vs실제_일어난_일:
            rich_text:
              - text:
                  content: "화해 목표였으나 되려 감정만 격해짐"
          했던_일:
            rich_text:
              - text:
                  content: "상황을 더 악화시키는 말"
          앞으로_할_일:
            rich_text:
              - text:
                  content: "우선 깊은 호흡 후 솔직한 대화"
          차이_분석_및_교훈:
            rich_text:
              - text:
                  content: "감정의 원인 구체화 후 대화 시 더 효과적"
          지속_개선_포기할_것:
            rich_text:
              - text:
                  content: "서운함만 곱씹지 않고 그때그때 솔직히 전달"
    Page:
      type: object
      properties:
        object:
          type: string
          example: "page"
        id:
          type: string
          description: The ID of the created page.
        created_time:
          type: string
          format: date-time
          description: When the page was created.
        last_edited_time:
          type: string
          format: date-time
          description: When the page was last edited.
        properties:
          type: object
          description: The properties of the created page.
